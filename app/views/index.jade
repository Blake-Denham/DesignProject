extends layout

block content
  
  
  .container
    h2 Map
    div.row
      div.col-sm-8#map

    form(action='/data',method='get')
      div.form-group
        div.row
          label.col-sm-1.col-form-label(for='minlat') Min Lat
          div.col-sm-3 
            input.form-control-plaintext(id='minlat',type='number',value='0',placeholder='0',name='minlat', min='-90', max='90', step='0.00000001')
          label.col-sm-1.col-form-label(for='maxlat') Max Lat
          div.col-sm-3 
            input.form-control-plaintext(id='maxlat',type='number',value='0',placeholder='0',name='maxlat', min='-90', max='90', step='0.00000001')
        div.row
          label.col-sm-1.col-form-label(for='minlong') Min Long
          div.col-sm-3 
            input.form-control-plaintext(id='minlong',type='number',value='0',placeholder='0',name='minlong', min='-180', max='180', step='0.00000001')
          label.col-sm-1.col-form-label(for='maxlong') Max Long
          div.col-sm-3 
            input.form-control-plaintext(id='maxlong',type='number',value='0',placeholder='0',name='maxlong', min='-180', max='180', step='0.00000001')
        div.row   
          input.col-sm-8(type='submit',value='Create',data-transition='fade', data-theme='c')

  div.container 
    h2 Raw Data
    form(action='/data', method='post')
      .form-group 
        .row 
          label.col-sm-2.col-form-label(for='data') Raw Data
          .col-sm-3 
            input.form-control-plaintext(id='data', type="file",name="data",accept=".csv")
          input.col-sm-3(type='submit',value='Upload',data-transition='fade', data-theme='c')
  
  .container 
    h2 Add Vehicle
    form(action='/vehicles', method='post')
      .form-group 
        .row 
          label.col-sm-2.col-form-label(for='imei') IMEI:
          .col-sm-3 
            input.form-control-plaintext(id='imei', type="text",name="imei")
        .row  
          label.col-sm-2.col-form-label(for='name') Name:
          .col-sm-3 
            input.form-control-plaintext(id='name', type="text",name="name")
        .row  
          label.col-sm-2.col-form-label(for='mass') Mass:
          .col-sm-3 
            input.form-control-plaintext(id='mass', type="number",name="mass")
        .row  
          input.col-sm-3(type='submit',value='Upload',data-transition='fade', data-theme='c')
  